<h1>Joaquin Grez</h1>
<div class="container">

	<%= form_tag(action: "save_user") do%>
		<div class="form-group">
			<%= label_tag :name, "Nombre"%>
			<%= text_field_tag :name, nil, placeholder:"Nombre", class: "form-control", type: "text"%>
		</div>
		<div class="form-group">
			<%= label_tag :email, "Email" %>
			<%= text_field_tag :email,nil, placeholder: "Email", class: "form-control"%>
		</div>
		<div class="form-group">
			<%= label_tag :age, "Edad" %>
			<%= text_field_tag :age, nil, placeholder:"Edad", class: "form-control"%>
		</div>
		<div>
			<%= submit_tag "Enviar", class: "btn btn-success" %>
		</div>
	<% end %>

	<%= link_to "Landing", pages_landing_path, class: "btn btn-danger"  %>

</div>

